                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/bestpriceitem" />
        </RelativeLayout>


    </LinearLayout>
