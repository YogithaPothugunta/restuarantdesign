<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.csi5230.yogitha.restuarantdesign.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/topbar"
        android:src="@drawable/topbarfeedback"
        android:background="#21283B"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/feedbackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navbarfeedback"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:rowCount="3"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#313541"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/topbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/TextView1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="left"
            android:textColor="#F6F7FC"
            android:text="Yourname"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="35dp"/>

        <EditText
            android:id="@+id/TextView4"
            android:gravity="right"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="right"
            android:background="#F6F7FC"
            android:text="SladeDesign"
            android:textAlignment="center"
            android:textColor="#B8B8B8"
            android:layout_width="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"/>

        <TextView
            android:id="@+id/TextView2"
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="1"
            android:textColor="#F6F7FC"
            android:verticalSpacing="195dp"
            android:text="Email"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="35dp"/>

        <EditText
            android:id="@+id/TextView5"
            android:gravity="right"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="right"
            android:background="#F6F7FC"
            android:text="email@email.com"
            android:textAlignment="center"
            android:textColor="#B8B8B8"
            android:layout_width="195dp"
            android:layout_marginRight="35dp"/>

        <TextView
            android:id="@+id/TextView3"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="left"
            android:textColor="#F6F7FC"
            android:text="Message"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="35dp"/>

        <EditText
            android:id="@+id/TextView6"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_row="2"
            android:background="#F6F7FC"
            android:textColor="#B8B8B8"
            android:text="Hello World"
            android:textAlignment="center"
            android:layout_width="195dp"
            android:layout_marginRight="35dp"
            android:layout_height="87dp" />

    </GridLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/keyboard"
        android:layout_below="@+id/feedbackbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="184dp" />

</RelativeLayout>