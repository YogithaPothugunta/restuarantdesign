<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/topbar"
        android:src="@drawable/topbarfeedback"
        android:background="#21283B"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/feedbackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navbarwinepage"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wine"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="295dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:src="@drawable/bestpriceitem"
            android:id="@+id/imageView5"
            android:layout_below="@+id/feedbackbar"
            android:layout_toRightOf="@+id/text1"
            android:layout_toEndOf="@+id/text1"
            android:layout_marginLeft="106dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="165dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:text="WINE NAME IS HERE"
        android:layout_marginLeft="45dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#1B1B1B"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginTop="81dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TWO IN A ROW"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#1B1B1B"
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/winetext"
        android:id="@+id/imageView7"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />


    `

</RelativeLayout>
